<div class="mt-4">
    <div class="row">
        {{#each courses}}
            <div class="col-sm-6 col-lg-4">
            <div class="card card-course-item" style="width: 18rem; margin-top:16px;">
                <a href="/courses/{{this.slug}}"/>
                <img class="card-img-top" src="{{this.image}}" alt="Card image cap"></img>
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua Khóa Học</a>
               </div>
            </div>
        </div>
        {{/each}}
        
    </div>
</div>